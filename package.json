{
  "name": "miniplex",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "A developer-friendly entity management system for games and similarly demanding applications, based on ECS architecture.",
  "homepage": "https://github.com/hmans/miniplex",
  "keywords": [
    "gamedev",
    "ecs",
    "react",
    "entity-component-system",
    "state",
    "state-management",
    "hooks"
  ],
  "sideEffects": false,
  "version": "0.5.7",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "type": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "type": "./dist/react.d.ts",
      "import": "./dist/react.js"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "./dist/react.d.ts"
      ]
    }
  },
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "build": "tsc",
    "release": "yarn test && yarn clean && yarn build && yarn publish",
    "test": "jest",
    "ci": "yarn build && yarn test",
    "docs": "typedoc src/index.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "jest": "^27.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.0.3",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": ">=16.8"
  }
}
